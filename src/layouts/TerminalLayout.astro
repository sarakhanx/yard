---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="Terminal-style AI Chat Interface" />
  </head>
  <body class="bg-black">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }
  
  html {
    font-family: system-ui, sans-serif;
    background: #000;
    color: #00ff00;
  }
  
  .xterm {
    padding: 0.5rem;
  }
</style> 